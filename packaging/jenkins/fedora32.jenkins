pipeline {
    agent { docker { image 'regina/fedora:32' } }

    stages {
        stage('Git') {
            steps {
                dir ('aux') {
                    git 'https://github.com/regina-normal/aux.git'
                }
                dir ('regina') {
                    git 'https://github.com/regina-normal/regina.git'
                }
            }
        }

        stage('Configure') {
            steps {
                dir ('regina') {
                    sh 'rm -rf build'
                    sh 'mkdir build'
                }
                dir ('regina/build') {
                    sh 'cmake -DPython_EXECUTABLE=/usr/bin/python3 -DPACKAGING_MODE=1 -DDISABLE_RPATH=1 ..'
                }
            }
        }

        stage('Environment') {
            steps {
                dir ('regina/build') {
                    sh 'make env'
                }
            }
        }

        stage('Package Source') {
            steps {
                dir ('regina/build') {
                    sh 'cpack --config CPackSourceConfig.cmake'
                }
                sh 'rm -rf rpmbuild'
                sh 'mkdir rpmbuild'
                dir ('rpmbuild/SOURCES') {
                    sh 'cp ../../regina/build/regina-*.tar.gz .'
                }
            }
        }

        stage('Build RPM') {
            steps {
                dir ('rpmbuild/SPECS') {
                    sh 'cp ../../aux/packaging/rpmspec/regina-fedora.spec .'
                    // For the python byte-compilation issue, see:
                    // https://bugzilla.redhat.com/show_bug.cgi?id=1947416
                    sh 'RPM_BUILD_NCPUS=2 rpmbuild --undefine py_auto_byte_compile --define "_topdir `pwd`/.." -ba regina-fedora.spec'
                }
            }
        }
    }
}

