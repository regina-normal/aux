pipeline {
    agent { docker { image 'regina/opensuse:tumbleweed' } }

    stages {
        stage('Git') {
            steps {
                dir ('aux') {
                    git 'https://github.com/regina-normal/aux.git'
                }
                dir ('regina') {
                    git 'https://github.com/regina-normal/regina.git'
                }
            }
        }

        stage('Configure') {
            steps {
                dir ('regina') {
                    sh 'rm -rf build'
                    sh 'mkdir build'
                }
                dir ('regina/build') {
                    sh 'cmake -DREGINA_KVSTORE=lmdb -DPython_EXECUTABLE=/usr/bin/python3 -DPACKAGING_MODE=1 -DDISABLE_RPATH=1 ..'
                }
            }
        }

        stage('Environment') {
            steps {
                dir ('regina/build') {
                    sh 'make env'
                }
            }
        }

        stage('Package Source') {
            steps {
                dir ('regina/build') {
                    sh 'cpack --config CPackSourceConfig.cmake'
                }
                sh 'rm -rf rpmbuild'
                sh 'mkdir rpmbuild'
                dir ('rpmbuild/SOURCES') {
                    sh 'cp ../../regina/build/regina-*.tar.gz .'
                }
            }
        }

        stage('Build RPM') {
            steps {
                dir ('rpmbuild/SPECS') {
                    sh 'cp ../../aux/packaging/rpmspec/regina-suse-tumbleweed.spec .'
                    sh 'RPM_BUILD_NCPUS=2 rpmbuild --define "_topdir `pwd`/.." -ba regina-suse-tumbleweed.spec'
                }
            }
        }

        stage('Appstream Metadata') {
            steps {
                dir ('rpmbuild') {
                    sh 'appstream-builder --origin=regina --basename=appdata --enable-hidpi --packages-dir=RPMS'
                }
            }
        }
    }
}

