#!/bin/bash
set -e

# OSX icons:
rm -rf regina.iconset
mkdir regina.iconset
for i in 16 32 128 256 512; do
  size=$i
  rsvg -w$size -h$size regina.svg regina.iconset/icon_${size}x${size}.png
  size=$(($i + $i))
  rsvg -w$size -h$size regina.svg regina.iconset/icon_${i}x${i}@2x.png
done
xcrun iconutil -c icns regina.iconset
rm -rf regina.iconset

# MSWindows icons: TODO

# XDG icons:
rm -rf xdg
mkdir xdg
for i in 16 22 24 32 48 64 128 256; do
  size=$i
  rsvg -w$size -h$size regina.svg xdg/regina-${size}.png
done

# QtUI icons:
rm -rf qtui
mkdir qtui
for i in 16 22 32 48 64; do
  size=$i
  rsvg -w$size -h$size regina.svg qtui/regina-${i}.png
  size=$(($i + $i))
  rsvg -w$size -h$size regina.svg qtui/regina-${i}@2x.png
done

# iOS icons:
# - ReginaLarge: 310 620 930
# - Packets/Document: 32 64 96
# - RGA DocType: 64 320
rm -rf ios
mkdir ios
for i in 32 64 96 310 320 620 930; do
  size=$i
  rsvg -w$size -h$size regina.svg ios/regina-${size}.png
done

